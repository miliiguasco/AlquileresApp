@using AlquileresApp.Core.Entidades
@code {
    [Parameter] public List<Promocion> Promociones { get; set; } = new();
    [Parameter] public EventCallback<Promocion> OnEditar { get; set; }
    [Parameter] public EventCallback<Guid> OnEliminar { get; set; }
    [Parameter] public EventCallback<Promocion> OnCrear { get; set; }

    private Promocion nuevaPromocion = new();

    private void LimpiarFormulario()
    {
        nuevaPromocion = new Promocion();
    }

    private async Task Crear()
    {
        await OnCrear.InvokeAsync(nuevaPromocion);
        LimpiarFormulario();
    }
}
